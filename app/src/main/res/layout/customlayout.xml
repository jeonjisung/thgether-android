<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/customImageView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#00bb00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXX"
        android:textSize="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/customImageView"
        app:layout_constraintEnd_toEndOf="@+id/customImageView"
        app:layout_constraintStart_toStartOf="@+id/customImageView"
        app:layout_constraintTop_toTopOf="@+id/customImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>